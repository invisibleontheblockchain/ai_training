# Application Configuration
APP_NAME=Ghosteam V5
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgresql://ghosteam:password@localhost:5432/ghosteam_v5
REDIS_URL=redis://localhost:6379

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_REGISTRY_URI=postgresql://mlflow:password@localhost:5432/mlflow
MLFLOW_S3_ENDPOINT_URL=http://localhost:9000
MLFLOW_ARTIFACT_ROOT=s3://mlflow-artifacts

# Feast Feature Store
FEAST_REPO_PATH=./feast_repo
FEAST_ONLINE_STORE_PATH=online_store.db
FEAST_OFFLINE_STORE_TYPE=file
FEAST_ONLINE_STORE_TYPE=redis

# Model Serving
MODEL_SERVING_HOST=0.0.0.0
MODEL_SERVING_PORT=8080
MODEL_CACHE_SIZE=10
MODEL_CACHE_TTL=3600

# Monitoring
PROMETHEUS_GATEWAY=http://localhost:9091
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your_grafana_api_key

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Kubernetes
K8S_NAMESPACE=ghosteam-v5
KSERVE_DOMAIN=example.com
KUBEFLOW_NAMESPACE=kubeflow

# Storage
S3_BUCKET=ghosteam-v5-data
S3_REGION=us-west-2
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# Azure (optional)
AZURE_STORAGE_ACCOUNT=your_storage_account
AZURE_STORAGE_KEY=your_storage_key
AZURE_CONTAINER_NAME=ghosteam-v5

# Google Cloud (optional)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GCS_BUCKET=ghosteam-v5-gcs

# Drift Detection
DRIFT_DETECTION_THRESHOLD=0.05
DRIFT_CHECK_INTERVAL_HOURS=24
DRIFT_REFERENCE_WINDOW_DAYS=30

# Model Training
DEFAULT_MODEL_TYPE=random_forest
TRAINING_DATA_WINDOW_DAYS=90
VALIDATION_SPLIT=0.2
TEST_SPLIT=0.1

# Performance Monitoring
MAX_PREDICTION_LATENCY_MS=100
MIN_MODEL_ACCURACY=0.85
ALERT_EMAIL=alerts@ghosteam.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/your/webhook/url

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/ghosteam-v5.log

# Development
RELOAD=true
WORKERS=1

# Production
WORKERS=4
MAX_WORKERS=16
WORKER_TIMEOUT=30
