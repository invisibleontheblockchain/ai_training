# Ghosteam V5 Production Environment Configuration

# Application
APP_NAME=Ghosteam V5
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# Database Configuration
DATABASE_URL=postgresql://ghosteam:${DB_PASSWORD}@postgres:5432/ghosteam_v5
REDIS_URL=redis://redis:6379

# MLflow Configuration
MLFLOW_TRACKING_URI=http://mlflow-tracking-service:5000
MLFLOW_REGISTRY_URI=postgresql://mlflow:${MLFLOW_DB_PASSWORD}@postgres:5432/mlflow
MLFLOW_S3_ENDPOINT_URL=https://s3.amazonaws.com
MLFLOW_ARTIFACT_ROOT=s3://${S3_BUCKET}/mlflow-artifacts

# Feast Feature Store
FEAST_REPO_PATH=/feast_repo
FEAST_ONLINE_STORE_TYPE=redis
FEAST_OFFLINE_STORE_TYPE=s3

# Model Serving
MODEL_SERVING_HOST=0.0.0.0
MODEL_SERVING_PORT=8080
MODEL_CACHE_SIZE=20
MODEL_CACHE_TTL=3600

# Monitoring
PROMETHEUS_GATEWAY=http://prometheus-pushgateway:9091
GRAFANA_URL=https://grafana.${DOMAIN}
GRAFANA_API_KEY=${GRAFANA_API_KEY}

# Security
SECRET_KEY=${SECRET_KEY}
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Kubernetes
K8S_NAMESPACE=ghosteam-v5
KSERVE_DOMAIN=${DOMAIN}
KUBEFLOW_NAMESPACE=kubeflow

# Storage
S3_BUCKET=${S3_BUCKET}
S3_REGION=${AWS_REGION}
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}

# Performance
MAX_PREDICTION_LATENCY_MS=50
MIN_MODEL_ACCURACY=0.85
WORKERS=4
MAX_WORKERS=16
WORKER_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Alerting
ALERT_EMAIL=${ALERT_EMAIL}
SLACK_WEBHOOK_URL=${SLACK_WEBHOOK_URL}

# Drift Detection
DRIFT_DETECTION_THRESHOLD=0.05
DRIFT_CHECK_INTERVAL_HOURS=6
DRIFT_REFERENCE_WINDOW_DAYS=30

# Auto-scaling
MIN_REPLICAS=2
MAX_REPLICAS=20
TARGET_CPU_UTILIZATION=70
